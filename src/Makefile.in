PACKAGE=@PACKAGE@
PROG=@PROG@
VERSION=@VERSION@
BUGREPORT=@BUGREPORT@
URL=@URL@

CONFDIR=@CONFDIR@
EXECDIR=@EXECDIR@

SHELL=/bin/sh
VPATH=@srcdir@

# root for installation
prefix=@prefix@
exec_prefix=@exec_prefix@

# executables
bindir=@bindir@
sbindir=@sbindir@
libexecdir=@libexecdir@

# data
datarootdir=@datarootdir@
datadir=@datadir@
sysconfdir=@sysconfdir@
sharedstatedir=@sharedstatedir@
localstatedir=@localstatedir@

libdir=@libdir@
localedir=@localedir@
srcdir=@srcdir@

INSTALL=@INSTALL@
INSTALL_PROGRAM=@INSTALL_PROGRAM@
INSTALL_DATA=@INSTALL_DATA@

all:

clean:

INSTALLDIRS = $(DESTDIR)${bindir} $(DESTDIR)${CONFDIR}/action.d $(DESTDIR)${EXECDIR}/action.d

installdirs:
	$(INSTALL) -d $(INSTALLDIRS)

install: installdirs all
	$(INSTALL_PROGRAM) bin/clicraft                $(DESTDIR)$(bindir)/clicraft
	$(INSTALL_DATA) lib/functions.sh               $(DESTDIR)$(EXECDIR)/functions.sh
	$(INSTALL_DATA) lib/defaults.sh                $(DESTDIR)$(EXECDIR)/defaults.sh
	$(INSTALL_DATA) lib/action.d/init.sh           $(DESTDIR)$(EXECDIR)/action.d/init.sh
	$(INSTALL_DATA) lib/action.d/status.sh         $(DESTDIR)$(EXECDIR)/action.d/status.sh
	$(INSTALL_DATA) lib/action.d/console.sh        $(DESTDIR)$(EXECDIR)/action.d/console.sh
	$(INSTALL_DATA) lib/action.d/stop.sh           $(DESTDIR)$(EXECDIR)/action.d/stop.sh
	$(INSTALL_DATA) lib/action.d/start.sh          $(DESTDIR)$(EXECDIR)/action.d/start.sh
	$(INSTALL_DATA) lib/action.d/cmd.sh            $(DESTDIR)$(EXECDIR)/action.d/cmd.sh
	$(INSTALL_DATA) lib/action.d/version.sh        $(DESTDIR)$(EXECDIR)/action.d/version.sh
	$(INSTALL_DATA) lib/action.d/help.sh           $(DESTDIR)$(EXECDIR)/action.d/help.sh
	$(INSTALL_DATA) lib/action.d/update.sh         $(DESTDIR)$(EXECDIR)/action.d/update.sh
	$(INSTALL_DATA) lib/action.d/config.sh         $(DESTDIR)$(EXECDIR)/action.d/config.sh
	$(INSTALL_DATA) lib/action.d/restart.sh        $(DESTDIR)$(EXECDIR)/action.d/restart.sh
	$(INSTALL_DATA) lib/defaults.sh                $(DESTDIR)$(EXECDIR)/defaults.sh
	$(INSTALL_DATA) etc/clicraft-defaults.conf     $(DESTDIR)$(CONFDIR)/clicraft-defaults.conf
	$(INSTALL_DATA) etc/action.d/backup.sh.example $(DESTDIR)$(CONFDIR)/action.d/backup.sh.example

uninstall:

dist:

distclean:

check:

info:

.PHONY: all clean installdirs install uninstall dist distclean check info

