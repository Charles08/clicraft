#!/bin/bash

PROG="$(basename $0)"

ETC="$CLICRAFT/etc"
LIB="$CLICRAFT/lib"
BIN="$(dirname $(readlink -f $0))"

CLICRAFT="${CLICRAFT-$(dirname $BIN)}"

if [ -f "$CLICRAFT/etc/clicraft.conf" ]; then
	. "$CLICRAFT/etc/clicraft.conf"
fi

. "$LIB/defaults.sh"
. "$LIB/functions.sh"

mkdir -p "$SERVER_DIR"
cd "$SERVER_DIR"
action "$@"

