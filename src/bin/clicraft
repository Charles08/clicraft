#!/bin/bash

PROG="$(basename $0)"

BIN="$(dirname $(readlink -f $0))"
CLICRAFT="${CLICRAFT-$(dirname $BIN)}"
ETC="$CLICRAFT/etc"
LIB="$CLICRAFT/lib"


if [ -f "$CLICRAFT/etc/clicraft.conf" ]; then
	. "$CLICRAFT/etc/clicraft.conf"
fi

. "$LIB/defaults.sh"
. "$LIB/functions.sh"

mkdir -p "$SERVER_DIR"
cd "$SERVER_DIR"
action "$@"

