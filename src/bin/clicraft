#!/bin/bash

PROG="$(basename $0)"
VERSION="0.0.2"

BIN="$(dirname $(readlink -f $0))"
CLICRAFT="${CLICRAFT-$(dirname $BIN)}"
ETC="$CLICRAFT/etc"
LIB="$CLICRAFT/lib"

. "$LIB/defaults.sh"
. "$LIB/functions.sh"

if [ -f "$CLICRAFT/etc/clicraft.conf" ]; then
	. "$CLICRAFT/etc/clicraft.conf"
fi


mkdir -p "$SERVER_DIR"
cd "$SERVER_DIR"

case "$1" in
  "--version")
	action version "$@"
  ;;
  "--help"|"-h")
	shift
	action help "$@"
  ;;
  "")
	action help
  ;;
  *)
	action "$@"
  ;;
esac

