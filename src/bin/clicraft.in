#!/bin/bash

PROG="@PROG@"
VERSION="@VERSION@"

BINDIR="$(dirname $(readlink -f $0))"
CLICRAFT="${CLICRAFT-$(dirname $BINDIR)}"
CONFDIR="$CLICRAFT/etc"
EXECDIR="$CLICRAFT/lib"

if [ -f "$CLICRAFT/etc/clicraft.conf" ]; then
	. "$CLICRAFT/etc/clicraft.conf"
fi

. "$EXECDIR/defaults.sh"
. "$EXECDIR/functions.sh"


mkdir -p "$SERVER_DIR"
cd "$SERVER_DIR"

case "$1" in
  "--version")
	action version "$@"
  ;;
  "--help"|"-h")
	shift
	action help "$@"
  ;;
  "")
	action help
  ;;
  *)
	action "$@"
  ;;
esac

