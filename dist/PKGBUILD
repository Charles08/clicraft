# Maintainer: DMBuce <dmbuce@gmail.com>
pkgname=clicraft
pkgver=0.0.5
pkgrel=1
pkgdesc="A command-line wrapper for a minecraft or bukkit server."
arch=("any")
url="https://github.com/DMBuce/clicraft"
license=('BSD')
depends=("bash" "tmux")
makedepends=("git")
#checkdepends=()
optdepends=("c10t: for map.sh action script" "mcexplore: for explore.sh action script")
install="$pkgname.install"
source=("https://github.com/DMBuce/clicraft/tarball/$pkgver"
        "$pkgname.install")
md5sums=('0892fa4e3b96919e8da10955384233f4'
         '631669f302dffa059b4bdc915374d3d6')

build() {
  cd $srcdir/DMBuce-clicraft-*

  autoconf
  ./configure --prefix=/usr \
              --libexecdir=/usr/lib \
              --sysconfdir=/etc \
              --localstatedir=/var \
              --with-mcexplore \
              --with-c10t
  make
}

package() {
  cd $srcdir/DMBuce-clicraft-*
  make DESTDIR="$pkgdir" install

}

# vim:set ts=2 sw=2 et:
