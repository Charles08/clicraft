# Maintainer: DMBuce <dmbuce@gmail.com>
pkgname=clicraft
pkgver=0.0.4
pkgrel=2
pkgdesc="A command-line wrapper for a minecraft or bukkit server."
arch=("any")
url="https://github.com/DMBuce/clicraft"
license=('BSD')
depends=("bash" "tmux")
makedepends=("git")
#checkdepends=()
optdepends=("c10t: for map.sh action script" "mcexplore: for explore.sh action script")
install="$pkgname.install"
source=("https://github.com/DMBuce/clicraft/tarball/$pkgver"
        "$pkgname.install")
md5sums=('773ca24b205b050b016b29103f1ec0a4'
         'f9c94624d9c5c4b93fb2e1de7e16299f')

build() {
  cd $srcdir/DMBuce-clicraft-*

  autoconf
  ./configure --prefix=/usr \
              --libexecdir=/usr/lib \
              --sysconfdir=/etc \
              --localstatedir=/var \
              --with-mcexplore \
              --with-c10t
  make
}

package() {
  cd $srcdir/DMBuce-clicraft-*
  make DESTDIR="$pkgdir" install

}

# vim:set ts=2 sw=2 et:
